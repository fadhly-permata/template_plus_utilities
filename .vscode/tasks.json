{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Security Scan",
            "type": "shell",
            "command": "trivy fs .",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Clean The Solution",
            "type": "shell",
            "command": "dotnet clean && rm -rf IDC.Template/bin/* && rm -rf IDC.Utilities/bin/*",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build The Solution",
            "type": "shell",
            "command": "chmod +x ./.vscode/build.sh && ./.vscode/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Rebuild The Solution",
            "type": "shell",
            "command": "chmod +x ./.vscode/rebuild.sh && ./.vscode/rebuild.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Generate Documentation",
            "type": "shell",
            "command": "cd /media/fadhly/Data/DOCS/Research/DocFxV3 && chmod +x run.sh && ./run.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
