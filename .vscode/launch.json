    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: IDC.Template [Default Configuration]",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build The Solution",
            "program": "${workspaceFolder}/IDC.Template/bin/Debug/net8.0/IDC.Template.dll",
            "args": [],
            "cwd": "${workspaceFolder}/IDC.Template",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
